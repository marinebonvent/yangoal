{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
 <!-- Logo et en-tête -->
 <br><br>
    <div class="flex justify-center mb-4">
      <div class="text-center">
 <p class="text-gray-600 text-sm">   <a href="{{ path('app_home') }}" class="inline-block py-3 px-3 text-l font-bold text-white bg-black rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-300">
  Tente Mania
</a> </p>      </div>
    </div>
<br><br>
<div class="flex justify-center items-center">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl p-10">
        <h1 class="text-2xl font-bold text-gray-800 mb-4 text-start">
            Connexion
        </h1>

        {% if error %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative mb-4">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, 
                <a href="{{ path('app_logout') }}" class="underline">Déconnexion</a>
            </div>
        {% endif %}

        <form method="post" class="space-y-6">
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700">
                    Adresse e-mail
                </label>
                <div class="relative mt-1">
                    <input
                        type="email"
                        value="{{ last_username }}"
                        name="_username"
                        id="username"
                        class="block w-full px-4 py-2 bg-gray-100 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder-gray-400"
                        placeholder="exemple@email.com"
                        required
                        autofocus
                        autocomplete="email"
                    />
                </div>
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">
                    Mot de passe
                </label>
                <div class="relative mt-1">
                    <input
                        type="password"
                        name="_password"
                        id="password"
                        class="block w-full px-4 py-2 bg-gray-100 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder-gray-400"
                        placeholder="••••••••"
                        required
                        autocomplete="current-password"
                    />
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# Uncomment pour activer "Remember me"
            <div class="flex items-center">
                <input
                    type="checkbox"
                    name="_remember_me"
                    id="_remember_me"
                    class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                >
                <label for="_remember_me" class="ml-2 block text-sm text-gray-700">
                    Se souvenir de moi
                </label>
            </div>
            #}

            <button
                type="submit"
                class="w-full px-4 py-2 font-medium text-white bg-black hover:bg-blue-600 rounded-md transition focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
                Se connecter
            </button>

            <div class="text-center mt-4">
               {#   <a href="#" class="text-sm text-gray-500 hover:text-blue-600 transition">
                    Mot de passe oublié ?
                </a> #}
            </div>
        </form>

        <div class="text-center mt-6">
            <a href="{{ path('app_register') }}" class="text-sm text-gray-500 hover:text-blue-600 transition">
                Pas encore de compte ? S'inscrire
            </a>
        </div>
    </div>
</div>
{% endblock %}