
{% if app.request.query.get('added') == 'true' %}
<div id="cart-notification" class="fixed inset-0 flex items-center justify-center z-50 bg-gray-800 bg-opacity-75 transition-opacity duration-300">
  <div class="bg-white rounded-lg shadow-2xl w-11/12 max-w-6xl mx-auto overflow-hidden transform transition-transform duration-300 scale-100">
    <!-- Entête avec confirmation d'ajout et bouton de fermeture -->
    <div class="p-4 md:p-6 border-b border-gray-100">
      <div class="flex items-start justify-between">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-green-100 rounded-full p-2 mr-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <span class="text-lg md:text-xl font-medium text-gray-800">Produit ajouté au panier</span>
        </div>
        <button id="close-notification" class="text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-full p-1 transition-colors duration-200" aria-label="Fermer">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Contenu du produit ajouté -->
    <div class="p-4 md:p-6">
      <div class="flex flex-col md:flex-row md:items-center">
        <div class="w-full md:w-40 h-40 md:h-40 bg-gray-100 rounded-lg overflow-hidden mb-4 md:mb-0 md:mr-6 flex-shrink-0 border border-gray-200">
          <img src="{{ vich_uploader_asset(product.imgProducts[0], 'imageFile') }}" alt="{{ product.Title }}" class="w-full h-full object-cover">
        </div>
        
        <div class="flex-1">
          <h3 class="text-xl md:text-3xl font-bold text-gray-900">{{ product.Title }}</h3>
          <p class="mt-2 text-lg text-gray-600">{{ product.summary|striptags|slice(0, 200) }}{% if product.summary|length > 200 %}...{% endif %}</p>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="mt-8 flex flex-col sm:flex-row justify-end gap-4">
        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="px-8 py-4 bg-white border border-gray-300 rounded-lg text-center font-medium text-gray-700 hover:bg-gray-50 transition-colors duration-200 shadow-sm flex items-center justify-center w-full sm:w-auto">

          Continuer vos achats
        </a>
        <a href="{{ path('app_cart') }}" class="px-8 py-4 bg-amber-600 hover:bg-amber-700 text-white rounded-lg text-center font-medium transition-colors duration-200 shadow-md flex items-center justify-center w-full sm:w-auto">
          Voir le panier
          
        </a>
      </div>
      
      <!-- Suggestions de produits complémentaires (optionnel) -->
      
        </div>
      </div>
    </div>
  </div>
</div>
<script>


    document.getElementById('close-notification').addEventListener('click', function() {
      document.getElementById('cart-notification').style.display = 'none';
    });
</script>

{% endif %}