{# templates/profil/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
{% include "_partials/nav.html.twig" %}
</br>

{% include "_partials/sidebar.html.twig" %}

<div class="flex-1 p-6">
    <!-- Mes Données -->
    <div id="profile-content" class="dashboard-content active">
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Mes Données Personnelles</h2>
            
            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
            
            {{ form_start(form, {'attr': {'class': 'grid md:grid-cols-2 gap-6'}}) }}
                <div>
                    <div class="mb-4">
                        {{ form_label(form.LastName, 'Nom', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                        {{ form_widget(form.LastName) }}
                        {{ form_errors(form.LastName) }}
                    </div>
                    <div class="mb-4">
                        {{ form_label(form.FirstName, 'Prénom', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                        {{ form_widget(form.FirstName) }}
                        {{ form_errors(form.FirstName) }}
                    </div>
                    <div class="mb-4">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div>
                    <div class="mb-4">
                        {{ form_label(form.plainPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                        {{ form_widget(form.plainPassword) }}
                        {{ form_errors(form.plainPassword) }}
                        <p class="text-sm text-gray-500 mt-1">Laissez vide pour conserver le mot de passe actuel</p>
                    </div>
                    
                    {% if form.newsletter is defined %}
                    <div class="mb-4">
                        {{ form_label(form.newsletter, 'Newsletter', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                        <div class="mt-2">
                            <label class="inline-flex items-center">
                                {{ form_widget(form.newsletter, {'attr': {'class': 'form-checkbox h-5 w-5 text-blue-600'}}) }}
                                <span class="ml-2 text-gray-700">Je souhaite recevoir les actualités</span>
                            </label>
                        </div>
                    </div>
                    {% endif %}
                </div>
            
                <div class="col-span-2 flex justify-end mt-4">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Sauvegarder
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}